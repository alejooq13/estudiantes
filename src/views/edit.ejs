<%- include('partials/_header') %>
<div class="container">
    <div class= "row">
        <!--Formulario-->
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= student._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="cedula" placeholder="Cédula" class="form-control" value="<%= student.cedula %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control" value="<%= student.nombre %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" placeholder="Teléfono" class="form-control" value="<%= student.telefono %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="sexo" placeholder="Sexo" class="form-control" value="<%= student.sexo %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nivel" placeholder="Nivel" class="form-control" value="<%= student.nivel %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="edad" placeholder="Edad" class="form-control" value="<%= student.edad %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="clase" placeholder="Clase" class="form-control" value="<%= student.clase %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="peso" placeholder="Peso" class="form-control" value="<%= student.peso %>">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>
    
